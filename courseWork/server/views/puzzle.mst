<!DOCTYPE html>
<html lang="ru">
<head>
{{>head}}
<style>
        @import "/stylesheets/puzzles.css";  
</style>
</head>
<body>
    {{>header}}
    {{>navbar_begin}} 
    {{>navbarLeft_begin}}
    <li class="nav-item">
        <a class="nav-link" href="/">Домой</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/puzzles">Головоломки</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/users">Пользователи</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/orders">Заказы</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/about">О нас</a>
    </li>
    {{>navbarLeft_end}}
    {{>navbarRight_begin}}
    <li class="nav-item">
        <a class="nav-link" href="#">какое то поле тут</a>
    </li>
    {{>navbarRight_end}}
    {{>navbar_end}}
  <div class="data">

    <div class="content">
            <div class="puzzle_data">
                
                <div class="puzzle_short_info">
                    <h2>{{puzzle.name}}</h2>
                    <img src="{{puzzle.photoUrl}}" alt="puzzle image" style="display:inline-block" width="200px" style="float:left">
                    <div class="puzzle_specs">
                        <table>
                            <tr><th>Тип</th><td>{{puzzle.type}}</td></tr>
                            <tr><th>Производитель</th><td>{{puzzle.manufacturer}}</td></tr>
                            <tr><th>WCA</th><td>{{puzzle.isWCA}}</td></tr>
                        </table>
                    </div>

                    <div class="puzzle_price">
                        <b>Цена</b>
                        <p>{{puzzle.price}}₴</p>
                        <form method="POST">
                            <button id="btn_buy" name="puzzle_id" value="{{_id}}">В корзину</button>
                        </form>
                    </div>

                </div>
                <form method="post" action="/puzzles/{{puzzle._id}}?_method=DELETE" onsubmit="return deleteClicked()">
                     <button type="submit" class="btn btn-danger mt-5">Удалить</button> 
                </form> 

                <div class="puzzle_bio">
                    <hr>
                    <h3>Описание</h3> 
                    <hr>
                    <p>{{puzzle.description_md}}</p>
                    {{! @todo MDparser }}
                </div>
                
            </div>
        </div>
    {{>footer}}
  </div>
  <script src="/scripts/index.js"></script>
    {{>bootstrap_scripts}}
</body>
</html>